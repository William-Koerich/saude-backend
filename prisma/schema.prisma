generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unidade {
  id        String      @id @default(uuid())
  nome      String
  tipo      TipoUnidade
  createdAt DateTime    @default(now())

  filas        Fila[]
  funcionarios Funcionario[]
}

enum TipoUnidade {
  HOSPITAL
  UPA
  UBS
}

model Fila {
  id        String          @id @default(uuid())
  nome      String
  tipo      TipoAtendimento
  chamada   Boolean         @default(false)
  unidadeId String
  createdAt DateTime        @default(now())

  unidade Unidade @relation(fields: [unidadeId], references: [id])
}

enum TipoAtendimento {
  PREFERENCIAL
  NORMAL
}

model Funcionario {
  id            String  @id @default(uuid())
  nome          String
  cpf           String  @unique
  email         String  @unique
  celular       String
  tipoDocumento String? // ✅ agora pode ser null
  documento     String? // ✅ agora pode ser null
  funcao        String
  senha         String

  unidadeId String
  unidade   Unidade @relation(fields: [unidadeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Fucao {
  MEDICO
  ENFERMEIRO
  ADMINISTRATIVO
  RECEPCIONISTA
  TECNICO
}
